<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:Microsoft.Knowzy.Xamarin;assembly=Microsoft.Knowzy.Xamarin"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microsoft.Knowzy.Xamarin.MainPage">
    <ContentPage.Content>
        
        <StackLayout>
            
            <Label Text="Knowzy Mobile - Inventory" VerticalOptions="Start" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" />
            
            <BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />

            <StackLayout x:Name="slLoggedIn" Orientation="Vertical">
                
                <StackLayout Orientation="Horizontal" IsVisible="False" Padding="5,10">
                    <Label Text="Welcome" />
                    <Label x:Name="lblUserName" />
                </StackLayout>

                <ListView x:Name="lvInventory" ItemSelected="InventoryList_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </StackLayout>
            
            <BoxView Color="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
            
            <Button x:Name="btnSignInSignOut" Text="Sign in" Clicked="btnSignInSignOut_Clicked"  VerticalOptions="End" HorizontalOptions="FillAndExpand"/>
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>